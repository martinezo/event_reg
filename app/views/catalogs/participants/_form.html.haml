.error-explanation

%h1= "#{t('titles.participant')} (#{@cc.name})"

= simple_form_for @catalogs_participant, url: url, :html => {:novalidate => true, multipart: true} do |f|

  .t-right
    =jq_submit_tag t('commands.save')
    = link_to_jq_button({url: catalogs_participants_list_path(@cc), text: t('commands.cancel'), icon: 'close', remote: false})
  .sp


  %h3.t-head= t('titles.event_general_data')
  .tbl-participants-attr
    .col-1
      =f.hidden_field :course_id, value: @cc.id
      =f.label :name
    .col-2
      =f.input_field :name, :size => 70
    .col-1
      =f.label :surnames
    .col-2
      =f.input_field :surnames, :size => 70
    .col-1
      =f.label :mail
    .col-2
      =f.input_field :mail, :size => 70
    .col-1
      =f.label :phone_numbers
    .col-2
      =f.input_field :phone_numbers, :size => 70
    .col-1
      =f.label :workplace
    .col-2
      =f.input_field :workplace, :size => 70

    - prices = {}
    - prices.merge!("#{@cc.price1_desc} ($ #{'%.2f' % @cc.price1})" => 1) unless @cc.price1_desc.try(:empty?)
    - prices.merge!("#{@cc.price2_desc} ($ #{'%.2f' % @cc.price2})" => 2) unless @cc.price2_desc.try(:empty?)
    - prices.merge!("#{@cc.price3_desc} ($ #{'%.2f' % @cc.price3})" => 3) unless @cc.price3_desc.try(:empty?)
    - if prices.size > 0
      .col-1
        = f.label :participant_type
      .col-2.prices
        =f.input_field :price, collection: prices, as: :radio_buttons

  - if @cc.academic_data_required?
    %h3.t-head= t('titles.academic_data')
    .tbl-participants-attr
      .col-1
        =f.label :bachelor_deg
      .col-2
        =f.input_field :bachelor_deg, :size => 70
      .col-1
        =f.label :master_deg
      .col-2
        =f.input_field :master_deg, :size => 70
      .col-1
        =f.label :phd_deg
      .col-2
        =f.input_field :phd_deg, :size => 70

  - if !(@cc.price1_desc+@cc.price2_desc+@cc.price3_desc).strip.empty?
    %h3.t-head= t('titles.invoice_data')
    .tbl-participants-attr
      .col-1
        =f.label :invoice_required
      .col-2
        =f.input_field :invoice_required, as: :boolean
      .col-1
        =f.label :inv_name
      .col-2
        =f.input_field :inv_name, :size => 70
      .col-1
        =f.label :inv_rfc
      .col-2
        =f.input_field :inv_rfc, :size => 70
      .col-1
        =f.label :inv_address
      .col-2
        =f.input_field :inv_address, :size => 70
      .col-1
        =f.label :inv_city
      .col-2
        =f.input_field :inv_city, :size => 70
      .col-1
        =f.label :inv_municipality
      .col-2
        =f.input_field :inv_municipality, :size => 70
      .col-1
        =f.label :inv_state
      .col-2
        =f.input_field :inv_state, :size => 70
      .col-1
        =f.label :inv_mail
      .col-2
        =f.input_field :inv_mail, :size => 70

  %h3.t-head= t('titles.additional_data')
  .tbl-participants-attr
    -if !@cc.opt_text.empty?
      .col-1
        =@cc.opt_text
      .col-2
        =f.input_field :opt_text, size: "69x5"
    -if !@cc.opt_str1.empty?
      .col-1
        =@cc.opt_str1
      .col-2
        =f.input_field :opt_str1, :size => 70
    -if !@cc.opt_str2.empty?
      .col-1
        =@cc.opt_str2
      .col-2
        =f.input_field :opt_str2, :size => 70
    -if !@cc.opt_bol1.empty?
      .col-1
        =@cc.opt_bol1
      .col-2
        =f.input_field :opt_bol1, as: :boolean
    -if !@cc.opt_bol2.empty?
      .col-1
        =@cc.opt_bol2
      .col-2
        =f.input_field :opt_bol2, as: :boolean
    -if !@cc.opt_sel.empty?
      - list = @cc.opt_sel_options.split(",")
      .col-1
        =@cc.opt_sel
      .col-2
        =f.select :opt_sel, list
  %hr
  .t-right
    =jq_submit_tag t('commands.save')
    = link_to_jq_button({url: catalogs_participants_list_path(@cc), text: t('commands.cancel'), icon: 'close', remote: false})
