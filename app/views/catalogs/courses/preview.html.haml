            =r.label :content_file
          .col-2
            =r.value :content_file
        #c-price1.c-info{style:"border: solid ##{@catalogs_course.color_theme2}; border-width: 1px 0px; background-color: ##{@catalogs_course.color_theme_l 3,0.5};"}
