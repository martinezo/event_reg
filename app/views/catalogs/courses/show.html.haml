%h1= t('titles.course')

.t-right
  = link_to_jq_button({url: edit_catalogs_course_path(@catalogs_course), text: t('commands.edit'), title: t('commands.edit'), icon: 'pencil', remote: false})
  = link_to_jq_button({url: catalogs_courses_path, text: t('commands.close'), icon: 'close', remote: false})
.sp

.alert-notice
  =render partial: 'layouts/alert_notice'

= show_for @catalogs_course do |r|
  %h3.t-head= t('titles.event_general_data')
  .tbl-courses-attr
    .col-1
      = r.label :name
    .col-2
      = r.value :name
    .col-1
      = r.label :start_date
    .col-2
      = r.value :start_date, :format => :long_only_date
    .col-1
      = r.label :description
    .col-2
      = r.value :description
    .col-1
      = r.label :location
    .col-2
      = r.value :location
    .col-1
      = r.label :schedule
    .col-2
      = r.value :schedule
    .sp

    %h3.t-head= t('titles.event_detail_data')
    .col-1
      = r.label :content_file
    .col-2
      = r.value :content_file
    .col-1
      = r.label :price1
    .col-2
      = number_with_precision(r.value :price1, precision: 2)
    .col-1
      = r.label :price2
    .col-2
      = number_with_precision(r.value :price2, precision: 2)
