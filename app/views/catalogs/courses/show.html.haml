      = r.label :opt_sel
    .col-2
      = r.value :opt_sel
    .col-1
      = r.label :opt_sel_options
    .col-2
      = r.value :opt_sel_options
    .sp
    %h3.t-head= t('titles.event_metadata')
    .col-1
      = r.label :image_file1
    .col-2
      = r.value :image_file1
    .col-1
      = r.label :image_file2
    .col-2
      = r.value :image_file2
